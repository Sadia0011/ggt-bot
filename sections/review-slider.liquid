<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<style>
  .review-container{
    margin: 20px auto;
  }
  .review-slider-title{
    max-width:823px;
    margin: auto;
    color: #272727;
    text-align: center;
    font-family: "Playfair Display";
    font-size: 48px;
    font-style: normal;
    font-weight: 400;
    line-height: 60px; 
  }
  .review-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .review-swiper {
    width: 100%;
    max-width: 100%;
    margin-top: 32px;
    overflow: hidden;
    padding: 0 16px;
    box-sizing: border-box;
  }
  .review-slide video {
       width: 300px;
       height: 533px;
       object-fit: cover;
  }
</style>


<div class="review-container">
  <h2 class="review-slider-title">Authentische Wimpern-Erfahrungen aus unserer Community</h2>
      <div class="swiper review-swiper">
      <div class="swiper-wrapper review-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide review-slide">
              <video controls>
                <source src="{{ block.settings.video }}" type="video/mp4">
              </video>
              
          </div>
        {% endfor %}
      </div>


      <div class="swiper-pagination"></div>


      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
</div>

<script>
const swiper = new Swiper('.swiper', {
    loop: true,
    slidesPerView: "auto",
    spaceBetween: 16,    
    pagination: {
        el: '.swiper-pagination',
        clickable: true,
    },
    navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
    },
    breakpoints: {
        1280: { slidesPerView: 4.5 }, 
        1024: { slidesPerView: 3.5 }, 
        768: { slidesPerView: 2.5 },  
        480: { slidesPerView: 1 }
    }
});


</script>

{% schema %}
{
  "name": "Review Slider",
  "settings": [],
  "blocks": [
    {
      "type": "slider",
      "name": "Slider",
      "settings": [
        {
          "type": "url",
          "id": "video",
          "label": "Video URL",
          "info": "Paste a direct MP4 video URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Review Slider",
      "blocks": [
        {
          "type": "slider"
        }
      ]
    }
  ]
}
{% endschema %}








