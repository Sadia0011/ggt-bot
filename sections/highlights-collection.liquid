<style>
    .collection-container {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        padding: 20px;
    }

    .collection-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        cursor: pointer;
    }

    .collection-item img {
        width: 120px;
        height: 120px;
        object-fit: contain;
        border-radius: 50%;
        padding: 10px;
        object-fit: cover;
    }

    .collection-item p {
        margin-top: 8px;
        font-size: 14px;
        font-weight: bold;
        color: #333;
    }

        /* tablets */
        @media (max-width: 1024px) {
        .collection-container {
            gap: 15px;
        }

        .collection-item img {
            width: 100px;
            height: 100px;
        }

        .collection-item p {
            font-size: 13px;
        }
    }

    /* mobile */
    @media (max-width: 768px) {
        .collection-container {
            flex-wrap: wrap;
            gap: 10px;
        }

        .collection-item {
            width: 33%; 
        }

        .collection-item img {
            width: 80px;
            height: 80px;
        }

        .collection-item p {
            font-size: 12px;
        }
    }
</style>

<div class="collection-container">
    {% for block in section.blocks %}
        <div class="collection-item">
            <a href="{{ block.settings.collection.url }}">
                <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.name }}">
                <p>{{ block.settings.name }}</p>
            </a>
        </div>
    {% endfor %}
</div>


{% schema %}
{
    "name": "Category Highlights",
    "settings": [],
    "blocks": [
        {
            "type": "category",
            "name": "Category",
            "settings": [
                {
                  "type": "collection",
                  "id": "collection",
                  "label": "collection"
                },
                {
                    "type": "text",
                    "id": "name",
                    "label": "Category Name"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Category Image"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Category Highlights",
            "blocks": [
                {
                    "type": "category"
                }
            ]
        }
    ]
}
{% endschema %}
